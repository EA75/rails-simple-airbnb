<div class="container my-5">
  <div class="row">
    <div class="col-6 mx-auto">
      <h1><%= @flat.name %></h1>
      <h3><%= @flat.description %></h3>
      <div>
        <p>Located at: <%= @flat.address %></p>
        <p>Guests: <%= @flat.number_of_guests %></p>
        <p>Price per night <%= @flat.price_per_night %></p>
      </div>

      <%= link_to 'Modify this flat', edit_flat_path(@flat) %>
      <%= link_to 'Back to flats', flats_path %>
    </div>
  </div>
</div>
