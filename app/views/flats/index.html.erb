<nav class="navbar navbar-light bg-light">
  <div class="container-fluid">
    <a class="navbar-brand">Simple Airbnb</a>
    <form class="d-flex">
      <%= link_to "Add Flat", new_flat_path, class: "btn btn-outline-primary"%>
    </form>
  </div>
</nav>

<div class="container my-5">
  <h1>All our Flats (<%= Flat.count()%>)</h1>
  <br>
  <div class="d-flex justify-content-between">
    <% @flats.each do |flat| %>
      <div class="card" style="width: 18rem;">
        <img src=<%=flat.picture%>>
        <div class="card-body">
          <h5 class="card-title"><%=flat.name%></h5>
          <h6 class="card-subtitle mb-2 text-muted"><%=flat.address%></h6>
          <div class="d-flex justify-content-start">
            <p class="card-text"><i class="fa-solid fa-people-group"></i><%=flat.number_of_guests%></p>
            <p class="card-text"><i class="fa-solid fa-money-bill-1"></i><%=flat.price_per_night%></p>
          </div>
          <%= link_to 'More info', flat_path(flat), class: 'position-absolute bottom-0' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
